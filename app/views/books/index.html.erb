<body>

  
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sureï¼Ÿ" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <h2>New book</h2>
      
  
  <form class="new_book" >
    <%= form_with model: @book, url: '/books',method: :post do |f| %>
    <div class="field">
      <label class="book_title">Title</label>
      <div class="box"><%= f.text_field :title %></div>
    </div>
    <div class="field">
      <label class="book_body">Body</label>
      <div class=textarea>
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </form>
</body>